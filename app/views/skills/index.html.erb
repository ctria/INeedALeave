<h1>Listing skills</h1>

<table>
  <thead>
    <tr>
      <th>Skill type</th>
      <th>Name</th>
      <th>Capacity</th>
      <th>Min coverage</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.skill_type %></td>
        <td><%= skill.name %></td>
        <td><div title="<%= skill.members.collect{|mbr| mbr.ircnick }.join(",") %>"><%= skill.capacity %></div></td>
        <td><%= skill.min_coverage %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>
